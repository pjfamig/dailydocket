<% provide(:title, 'Reset your password') %>

<div class="row">
	<div class="col-md-6">
		
<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post, :html => { :role => "form" } do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>

  <div class="btn-group"><%= submit_tag "Reset Password", class: "btn btn-large btn-primary" %>
  </div>

<% end %>


  	</div>

	<div class="col-md-3">
	</div>
</div>