<li id="<%= feed_item.id %>">
	<span class="headline">
	 <h1>
	  <% if feed_item.image_url %>	
	   <%= image_tag feed_item.image_url(:thumb).to_s %>
	  <% end %>
	  <%= link_to feed_item.headline, feed_item.url %>
	 </h1>
	</span>

  <% if feed_item.tags.any? %>
	<%= raw feed_item.tag_list.map { |t| link_to t.titleize, tag_path(t), class: "btn btn-success btn-xs" }.join(' ') %>
  <% end %>

  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>

<%= link_to "comments", feed_item %>

<% if current_user.admin? %>
    | 
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.headline %>
  <% end %>
</li>