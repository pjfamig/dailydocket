<li id="<%= feed_item.id %>">
	<div class="row">
		
		<!--
	  <% if feed_item.image_url %>
		<div class="col-sm-1">
	   <%= image_tag feed_item.image_url(:thumb).to_s %>
		</div>	
		<div class="col-sm-11" style="padding-left: 34px;">
	  <% else %>
		<div class="col-xs-12">
	  <% end %>
		-->
		<div class="col-xs-9">

	 <h1>
	  <%= link_to feed_item.headline, feed_item.url %> <small><i><%= feed_item.domain %></i></small>
	 </h1>
	<span class="timestamp">
    <small>Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</small>
  </span>

<br>
<%= pluralize feed_item.reputation_for(:post_votes).to_i, "vote" %>
| <%= link_to "up", vote_post_path(feed_item, type: "up"), method: "post" %>
| <%= link_to "down", vote_post_path(feed_item, type: "down"), method: "post" %>
| <%= link_to feed_item.comments.count.to_s + " comments", feed_item %>




<% if signed_in? && current_user.admin? %>
    | 
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.headline %>
  <% end %>
		</div>
		
		<div class="col-xs-3">
		<% if feed_item.tags.any? %>
			<%= raw feed_item.tag_list.map { |t| link_to t.titleize, tag_path(t), class: "label label-success " + t.to_s }.join(' ') %>
		<% end %>
		
		</div>
	</div>
</li>