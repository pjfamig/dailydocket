<% if params[:parent_id] %>

<div class="nested_comments" id="new_comment_form">
<li class="new_comment">
<%= form_for([@post, @comment], remote: true, :html => { :role => "form" }) do |f| %>
  <%= render :partial => 'shared/error_messages', :locals => { :object => @comment } %>
	<div class="form-group">
		<%= f.hidden_field :parent_id %>
		<%= f.label :content, class: "sr-only" %>
    	<%= f.text_area :content, class: "form-control", placeholder: "Enter new comment..." %>
  	</div>
  	<div class="btn-group">
		<%= f.submit "Post", class: "btn btn-large btn-primary" %>
	</div>
<% end %>
</li>
</div>

<div class="nested_comments"><div id="empty_space_for_<%= params[:parent_id] %>"></div></div>


<% else %>
<li class="new_comment">
<%= form_for([@post, @comment], :html => { :role => "form" }) do |f| %>
  <%= render :partial => 'shared/error_messages', :locals => { :object => @comment } %>
	<div class="form-group">
		<%= f.hidden_field :parent_id %>
		<%= f.label :content, class: "sr-only" %>
    	<%= f.text_area :content, class: "form-control", placeholder: "Enter new comment..." %>
  	</div>
  	<div class="btn-group">
		<%= f.submit "Post", class: "btn btn-large btn-primary" %>
	</div>
</li>	
<% end %>

<% end %>
